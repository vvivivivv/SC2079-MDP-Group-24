<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top half: Map -->
    <com.ntu.group24.android.map.GridMap
        android:id="@+id/gridMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Middle: Toggle Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/map_sub_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="#2196F3">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control_setup" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comms_setup" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Bottom half: Container for Control/Communications Fragments -->
    <FrameLayout
        android:id="@+id/map_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>