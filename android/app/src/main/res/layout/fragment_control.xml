<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <!-- Compact D-Pad Movement -->
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TableRow android:gravity="center">
                <Button
                    android:id="@+id/btnForward"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/move_forward"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow android:gravity="center">
                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/move_left"
                    android:textSize="20sp" />
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/move_right"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow android:gravity="center">
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="@string/move_backward" android:textSize="20sp" />
            </TableRow>
        </TableLayout>

        <!-- Task & Reset Controls -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="0dp">

            <Button
                android:id="@+id/btnTask1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/task1"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btnTask2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/task2" android:textSize="12sp" />
            <Button
                android:id="@+id/btnCompute"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/start_computation"
                android:backgroundTint="#673AB7"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnResetMap"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/reset"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Set Coordinates Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="#F5F5F5"
        android:padding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_x" />
        <EditText
            android:id="@+id/etRobotX"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/hint_zero"
            android:autofillHints="none"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_y"
            android:layout_marginStart="8dp" />
        <EditText
            android:id="@+id/etRobotY"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:autofillHints="none"
            android:hint="@string/hint_zero" android:textSize="14sp"/>
        <Button
            android:id="@+id/btnSetRobot"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:text="@string/btn_set"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>