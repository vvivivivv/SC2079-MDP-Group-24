<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.ControlFragment">

    <!-- Movement controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnForward"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="@string/move_forward" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="@string/move_left" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="@string/move_right" />
        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="@string/move_backward" />
    </LinearLayout>

    <!-- Task controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnTask1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/task1" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnTask2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/task2" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_computation"
        android:backgroundTint="#673AB7"
        android:textColor="#FFFFFF" />
</LinearLayout>
